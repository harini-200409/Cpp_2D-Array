#include <iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int mat[n][n];
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
            cin>>mat[i][j];
        }
    }
    int ec=0,oc=0;
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
            if(mat[i][j]%2==0)
            {
                ec++;
            }
            else
            {
                oc++;
            }
        }
    }
    if(ec==(n*n)||oc==(n*n))
    {
        cout<<"yes";
    }
    else
    {
        cout<<"no";
    }
    return 0;
}
